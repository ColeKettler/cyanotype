{{#foreach posts}}
  <article class="{{post_class}}">

    <hr>

    <div class="vertical-cell"
      <header class="post-header">
        <h2 class="post-title">
          <a href="{{url}}">{{{title}}}</a>
        </h2>
      </header>

      <section class="post-excerpt">
        <p>{{excerpt}}...</p>
      </section>

      <footer class="post-footer">
        <section class="post-meta">
          <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM Do YYYY"}}</time>
          on
          <span class="post-tags">{{tags separator=' and '}}</span>
        </section>
      </footer>
    </div>
  </article>
{{/foreach}}
