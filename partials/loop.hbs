{{#foreach posts}}
<article class="{{post_class}}">
  <header class="post-header">
    <section class="post-meta">
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM Do YYYY"}}</time>
    </section>
    <h2 class="post-title">
      <a href="{{url}}">{{{title}}}</a>
    </h2>
  </header>

  <section class="post-excerpt">
    <p>{{excerpt}}</p>
  </section>

  <footer class="post-footer">
  </footer>
</article>
{{/foreach}}
